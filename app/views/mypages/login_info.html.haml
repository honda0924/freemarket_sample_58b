= render partial: "./shared/item-header"
-breadcrumb :profile
= render partial: "./shared/breadcrumbs"
.main_container
  = render partial: "side_menu"
  .exhibit-btn
    .exhibit-btn__text
      = link_to items_new_path do
        出品
    .exhibit-btn__icon
      =icon 'fas','camera'
  .mypage__wrapper
    .main
      .main__container
        %h2.main__container__head
          メール・パスワード
        .main__container__form
          =form_with model:@user,url: login_info_edit_mypage_path, method: :post, local: true do |f|
            .main__container__list
              .form-groups
                =f.label "メールアドレス", for: "email"
                = f.text_field :email, { placeholder: "PC・携帯どちらでも可", type: "email", class: "input-default2"}
                = render partial: './shared/error', locals: {model: @user, column: "email"}
              .form-groups
                =f.label "現在のパスワード", for: "password"
                = f.text_field :now_password ,{type: "password",class: "input-default2"}
              .form-groups
                =f.label "新しいパスワード", for: "password"
                = f.text_field :password ,{ placeholder: "７文字以上の半角英数字", type: "password",class: "input-default2"}
              .form-groups
                =f.label "新しいパスワード確認", for: "password"
                = f.text_field :password_confirmation ,{ placeholder: "新しいパスワードを再入力", type: "password",class: "input-default2"}
                = render partial: './shared/error', locals: {model: @user, column: "password"}
              =f.submit "更新する",{class:"btn-default btn-red"}

= render partial: "./items/appbanner"
= render partial: "./shared/item-footer"

