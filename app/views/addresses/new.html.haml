.rapper
  .single-container
    .signup_address
      .single-header
        %h1.single-header__logo
          = link_to "#" do
            =image_tag "fmarket_logo_red.svg"
        %nav.progress
          %ul.progress-bar
            %li.through#through.gray
              会員情報
              .progress-status
              .progress-status_bar.red
            %li.active#active
              電話番号認証
              .progress-status.red
              .progress-status_bar.red
            %li.address#address.red
              お届け先住所入力
              .progress-status.red
              .progress-status_bar
            %li.payment#payment
              支払い方法
              .progress-status
              .progress-status_bar
            %li.end#end
              完了
              .progress-status
              .progress-status_bar

    .main
      .main__container
        %h2.main__container__head
          住所入力
        .main__container__form
          .main__container__list
            .form-groups
              %label(for="name")
                お名前
              %span.form-require
                必須
              %input.input-default2{ placeholder: "例）山田", type: "text", value:""}
              %input.input-default2{ placeholder: "例）彩", type: "text", value:""}
            .form-groups
              %label(for="kana")
                お名前カナ
              %span.form-require
                必須
              %input.input-default2{ placeholder: "例）ヤマダ", type: "text", value:""}
              %input.input-default2{ placeholder: "例）アヤ", type: "text", value:""}
            .form-groups
              %label(for="addnumber")
                郵便番号
              %span.form-require
                必須
              %input.input-default2{ placeholder: "例）123-4567", type: "text", value:""}
            .form-groups
              %label(for="prefecture")
                都道府県
              %span.form-require
                必須
              %select{name: "year", class: "select-default"}
                %option(label="北海道")
                %option(label="青森")
                %option(label="岩手")
                %option(label="秋田")
                %option(label="新潟")
            .form-groups
              %label(for="city")
                市区町村
              %span.form-require
                必須
              %input.input-default2{ placeholder: "例）横浜市緑区", type: "text", value:""}
            .form-groups
              %label(for="address")
                番地
              %span.form-require
                必須
              %input.input-default2{ placeholder: "例）青山1-1-1", type: "text", value:""}
            .form-groups
              %label(for="building")
                建物名
              %span.form-require__option
                任意
              %input.input-default2{ placeholder: "例）柳ビル103", type: "text", value:""}
            .form-groups
              %label(for="tel")
                電話
              %span.form-require__option
                任意
              %input.input-default2{ placeholder: "例）09012345678", type: "tel", value:""}
            %button{type:"submit", class:"btn-default btn-red"}
              次へ進む


  = render '/devise/shared/user_footer'