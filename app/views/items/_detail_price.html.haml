.item-price-box
  %span.item-price
    = number_to_currency @item.price
  %span.item-tax
    (税込)
  %span.item-shipping
    送料込み
- if (@item.user_id != current_user.id)
  .item-buy-btn
    購入画面に進む
  .item-info
    %p.item-info__inner
      = @item.description
  .item-container
    .item-container__left
      %button{type:"button", class:"item-button-like"}
        = icon('far', 'fa-heart',  class: "icon-like")
        %i.far.fa-heart
        %span いいね! 0
      =link_to "#", class: "item-button-report" do
        = icon('far', 'fa-flag',  class: "icon-flag")
        %i.far.fa-flag
        %span 不適切な商品の報告
      =link_to "#", class: "item-container__right" do
        = icon('fas', 'fa-lock', class: "icon-lock")
        %i.fas.fa-lock
        %span あんしん・あんぜんへの取り組み
- elsif (@item.status.id == 2)
  この商品は売買済みです。
- else
  .item-edit-btn
    商品の編集
  %br
    -if (@item.status.id == 1)
      .item-delete-btn
        =link_to "出品を一旦停止する", edit_item_path(@item)
          
    -elsif (@item.status.id == 3)
      .item-edit-btn
        =link_to "出品を再開する", edit_item_path(@item)
  .item-delete-btn
    =link_to "この商品を削除する", item_path(@item), method: :delete
  %p.item-info__inner
    = @item.description