.rapper
  .single-container
    .signup_address
      .single-header
        %h1.single-header__logo
          = link_to "#" do
            =image_tag "fmarket_logo_red.svg"
        %nav.progress
          %ul.progress-bar
            %li.through#through.gray
              会員情報
              .progress-status
              .progress-status_bar.red
            %li.active#active.gary
              電話番号認証
              .progress-status.red
              .progress-status_bar.red
            %li.address#address.gray
              お届け先住所入力
              .progress-status.red
              .progress-status_bar.red
            %li.payment#payment.red
              支払い方法
              .progress-status.red
              .progress-status_bar
            %li.end#end
              完了
              .progress-status
              .progress-status_bar
    .main
      .main__container
        %h2.main__container__head
          支払い方法
        .main__container__form
          = form_with url: signup_index_path, method: :post, class: "main__container__list", id: "charge-form", local: true do |f|
            .form-groups
              %label(for="credit")
                カード番号
              %span.form-require
                必須
              = f.text_field :number, {class: "input-default2", placeholder: "半角数字のみ", maxlength: "16" , minlength: "16", required: "true"}
              %h3
                = image_tag("card_5brand", class: "credit-logo")
            .form-groups
              %div
                %label 有効期限
                %span.form-require 必須
              .name-form
                = f.select :exp_month, [[01,01],[02,02],[3,3],[4,4],[5,5],[6,6],[7,7],[8,8],[9,9],[10,10],[11,11],[12,12]], {}, {class: "input-select" , required: "true"}
                %span.input-select__data 月
                = f.select :exp_year, [[19,2019],[20,2020],[21,2021],[22,2022],[23,2023],[24,2024],[25,2025],[26,2026],[27,2027]], {}, {class: "input-select" , required: "true"}
                %span.input-select__data 年
              .form-groups
                %label(for="security")
                  セキュリティコード
                %span.form-require
                  必須
                = f.text_field :cvc,{class: "input-default2", placeholder: "カード背面４桁もしくは３桁の番号" , maxlength: "4" , minlength: "3", required: "true"}
                .signup-seqcode
                  %span.question ?
                  カードの背面の番号とは？
              = f.submit "次へ進む", class:"btn-default btn-red"
    = render '/devise/shared/user_footer'
