.rapper
  .single-container
    .signup_address
      .single-header
        %h1.single-header__logo
          = link_to "#" do
            =image_tag "fmarket_logo_red.svg"
        %nav.progress
          %ul.progress-bar
            %li.through#through.gray
              会員情報
              .progress-status
              .progress-status_bar.red
            %li.active#active.gary
              電話番号認証
              .progress-status.red
              .progress-status_bar.red
            %li.address#address.red
              お届け先住所入力
              .progress-status.red
              .progress-status_bar
            %li.payment#payment
              支払い方法
              .progress-status
              .progress-status_bar
            %li.end#end
              完了
              .progress-status
              .progress-status_bar
  .main
    .main__container.all-contents
      %h2.main__container__head.user-identification
        本人情報の登録
      .main__container__form
        = form_with model:@address,url: create4_signup_index_path, method: :get, local: true  do |f|
          %div
            %p お客さまの本人情報をご登録ください。
            %br 登録されたお名前・生年月日を変更する場合、本人確認の提出が必要になります。
            %p.text-right
              = link_to "#" do
                本人確認書類のアップロードについて >
          .main__container__list.form-left
            .form-groups.identity
              %label お名前
              %p ヴァレ 有生
            .form-groups.identity
              %label お名前カナ
              %p ヴァレユウイ
            .form-groups.identity
              =f.label "生年月日",for: "birthday" 
              %p 1987/05/27
            .form-groups
              =f.label "郵便番号",for: "zip_code"
              %span.form-require__option
                任意
              =f.text_field :postal_code,{ placeholder: "例）1234567", class: "input-default2"}
            .form-groups
              =f.label "都道府県",for:"prefecture"
              %span.form-require__option
                任意
              = f.select :delivery_area, Product.delivery_areas.keys, {}, {class: 'select-default'}
            .form-groups
              =f.label "市区町村",for:"city"
              %span.form-require__option
                任意
              =f.text_field :city, { placeholder: "例）青山1-1-1", class: "input-default2"}
            .form-groups
              =f.label "建物名",for: "building"
              %span.form-require__option
                任意
              =f.text_field :address,{placeholder: "例）柳ビル103", class: "input-default2"}
            =f.submit "登録する",{class:"btn-default btn-red register"}
            %p.text-right
              = link_to "#" do
                本人情報の登録について >
  = render '/devise/shared/user_footer'

