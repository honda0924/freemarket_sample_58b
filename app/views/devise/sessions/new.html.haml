.wrapper
  .container
    = render partial: 'devise/shared/user_header'
    .contents-panel
      .contents-panel__login
        .contents-panel__login-no
          %p
            アカウントをお持ちでない方はこちら
            = link_to '新規会員登録',user_create_profile_signup_index_path
        .contents-panel__login__form-sns
          =link_to user_facebook_omniauth_authorize_path,method: :post, class: "btn-default link-fb2" do
            = icon('fab', 'facebook-square',  class: "fb-icon2")
            Facebookでログイン
          =link_to user_google_oauth2_omniauth_authorize_path,method: :post, class: "btn-default link-google2" do
            = icon('fab', 'google', class: "google-icon2")
            Googleでログイン
        .contents-panel__login__form-inner
          =form_with model: @user,url: user_session_path, local: true do |f|
            .form-group
              =f.email_field :email,class: "input-default",id: "email",placeholder: "メールアドレス"
            .form-group
              = f.password_field :password,class: "input-default",placeholder: "パスワード"
            .form-group
              =f.submit "ログイン",class: "btn-default btn-red"
              =link_to "パスワードをお忘れの方"
  = render '/devise/shared/user_footer'

