.wrapper
  .container
    = render partial: 'devise/shared/user_header'
    .contents-panel
      .contents-panel__login
        .contents-panel__login-no
          %p
            アカウントをお持ちでない方はこちら
          =link_to new_user_registration_path do
            新規会員登録
        .contents-panel__login__form-sns
          =link_to "https://www.facebook.com/", class: "btn-default link-fb2" do
            = icon('fab', 'facebook-square',  class: "fb-icon2")
            Facebookでログイン
          =link_to "http://www.google.com/", class: "btn-default link-google2" do
            = icon('fab', 'google', class: "google-icon2")
            Googleでログイン
        = form_with model: @user, url: user_session_path, class: "contents-panel__login__form-inner" do |f|
          .form-group
            = f.email_field :email, class: "input-default", placeholder: "メールアドレス"
          .form-group
            = f.password_field :password, class: "input-default", placeholder: "パスワード"
          .form-group
            = f.submit "ログイン", class: "btn-default btn-red"
          =link_to "#" do
            パスワードをお忘れの方
  = render '/devise/shared/user_footer'

